<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/layoutMain"
    android:layout_marginTop="15dp"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/layoutChoose"
        android:layout_width="35dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivChoose"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/zx_107" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="69dp"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:orientation="horizontal">

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/img"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="9dp"
            android:src="@mipmap/ic_launcher"
            app:sriv_left_bottom_corner_radius="30dp"
            app:sriv_left_top_corner_radius="30dp"
            app:sriv_right_bottom_corner_radius="30dp"
            app:sriv_right_top_corner_radius="30dp" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginRight="10dp"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:paddingLeft="13dp">

        <TextView
            android:id="@+id/lastTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:gravity="right"
            android:text="12:18:30"
            android:textColor="#FF999999"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text="凌小慧"
                android:textColor="#FFD0021B"
                android:textSize="14sp" />

            <RelativeLayout
                android:id="@+id/sex"
                android:layout_width="21.6dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:background="@mipmap/zx_27">

                <TextView
                    android:id="@+id/age"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="2dp"
                    android:gravity="center"
                    android:text="30"
                    android:textColor="@color/color_white"
                    android:textSize="8sp" />

            </RelativeLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="7dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="期望职位"
                android:textColor="#FF666666"
                android:textSize="13sp" />

            <TextView
                android:singleLine="true"
                android:id="@+id/hopepostion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#FF666666"
                android:textSize="13sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:visibility="gone"
                android:layout_width="14.9dp"
                android:layout_height="6.4dp"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:src="@mipmap/zx_12" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="10dp"
                android:layout_gravity="center"
                android:src="@mipmap/zx_28" />

            <TextView
                android:id="@+id/education"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="大专"
                android:textColor="#FF666666"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:src="@mipmap/zx_114" />

            <TextView
                android:id="@+id/jobyear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="3年"
                android:textColor="#FF666666"
                android:textSize="13sp" />

            <ImageView
                android:layout_width="14.2dp"
                android:layout_height="14.2dp"
                android:layout_gravity="center"
                android:layout_marginLeft="6dp"
                android:src="@mipmap/zx_115" />

            <TextView
                android:id="@+id/jiguan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="永康"
                android:textColor="#FF666666"
                android:textSize="13sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:visibility="gone"
                android:layout_width="14.5dp"
                android:layout_height="14.5dp"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:src="@mipmap/zx_53" />
        </LinearLayout>

        <TextView
            android:visibility="invisible"
            android:id="@+id/workerId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="8dp"
            android:gravity="right"
            android:text="1231636"
            android:textColor="#FF999999"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
