<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/update_time"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="7dp"
        android:text="---"
        android:textColor="#FF666666"
        android:textSize="13sp" />

    <com.zuoni.common.widget.SwipeMenuView
        android:layout_width="match_parent"
        android:layout_height="64dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/layoutChoose"
                android:layout_width="35dp"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivChoose"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_centerInParent="true"
                    android:src="@mipmap/zx_107" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_12"
                android:orientation="horizontal"
                android:paddingLeft="17dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="9dp"
                    android:paddingTop="11dp">

                    <TextView
                        android:id="@+id/title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="9dp"
                        android:text="猎头顾问"
                        android:textColor="#FF333333"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/zx_106" />

                        <TextView
                            android:id="@+id/hits"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:text="327"
                            android:textColor="#FF999999"
                            android:textSize="12sp" />

                        <ImageView
                            android:id="@+id/ivChatStatus"
                            android:layout_width="13dp"
                            android:layout_height="13dp"
                            android:layout_gravity="center"
                            android:src="@mipmap/zzzzzzzz" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="11dp"
                    android:background="@drawable/bg_10"
                    android:gravity="center"
                    android:paddingLeft="7dp"
                    android:paddingRight="7dp"
                    android:text="刷新"
                    android:textColor="#FFFFFFFF"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/ordid"
                    android:layout_width="25dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_13"
                    android:gravity="right|center_vertical"
                    android:paddingRight="2dp"
                    android:text="2"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/status"
                    android:layout_width="61dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/bg_10"
                    android:gravity="center"
                    android:text="招聘中"
                    android:textColor="#FFFFFFFF"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/menu01"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/zx_99" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/menu02"
                android:layout_width="24.8dp"
                android:layout_height="24.8dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="16.2dp"
                android:src="@mipmap/zx_100" />
        </LinearLayout>
    </com.zuoni.common.widget.SwipeMenuView>
</LinearLayout>