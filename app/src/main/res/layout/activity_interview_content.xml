<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D0021B"
    android:orientation="vertical">

    <include layout="@layout/top_bar_style" />

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="26dp"
        android:background="@mipmap/zx_110"
        android:orientation="vertical">

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            app:sriv_left_bottom_corner_radius="25dp"
            app:sriv_left_top_corner_radius="25dp"
            app:sriv_right_bottom_corner_radius="25dp"
            app:sriv_right_top_corner_radius="25dp" />

        <TextView
            android:id="@+id/tv02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="陈启平"
            android:textColor="#FF333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:text="邀请面试的职位：磨具车工"
            android:textColor="#FFD0021B"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_marginBottom="26dp"
        android:layout_marginTop="0.5dp"
        android:layout_weight="1"
        android:background="@mipmap/zx_109"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25.7dp"
            android:layout_marginRight="25.7dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="14.6dp"
                android:src="@mipmap/zx_17" />

            <TextView
                android:id="@+id/tv04"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.3dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="请选择联系人"
                android:textColor="#FF333333"
                android:textSize="11sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25.7dp"
            android:layout_marginRight="25.7dp"
            android:layout_marginTop="13dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="14.6dp"
                android:src="@mipmap/zx_18" />

            <TextView
                android:id="@+id/tv05"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.3dp"
                android:background="@null"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="请填写联系人"
                android:textColor="#333333"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25.7dp"
            android:layout_marginRight="25.7dp"
            android:layout_marginTop="14dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="14.6dp"
                android:src="@mipmap/zx_19" />

            <TextView
                android:id="@+id/tv06"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.3dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="请填写联系方式"
                android:textColor="#333333"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25.7dp"
            android:layout_marginRight="25.7dp"
            android:layout_marginTop="13dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="14.6dp"
                android:src="@mipmap/zx_20" />

            <TextView
                android:id="@+id/tv07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12.3dp"
                android:paddingBottom="4dp"
                android:paddingTop="4dp"
                android:text="请填写地址"
                android:textColor="#333333"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25.7dp"
            android:layout_marginRight="25.7dp"
            android:layout_marginTop="13dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="14.6dp"
                android:layout_gravity="top"
                android:src="@mipmap/zx_15" />

            <TextView
                android:id="@+id/tv08"
                android:layout_width="264dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="6.6dp"
                android:layout_marginRight="28dp"
                android:gravity="top"
                android:padding="5dp"
                android:text="请输入邀请内容"
                android:textColor="#FF333333"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>