<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/top_bar_style" />

    <LinearLayout
        android:id="@+id/layout1"
        style="@style/settings_item_layout_style">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="账号信息"
            android:textColor="#FF333333"
            android:textSize="17sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="7.2dp"
            android:layout_height="16.7dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@mipmap/zx_44" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout2"
        style="@style/settings_item_layout_style">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="基本信息"
            android:textColor="#FF333333"
            android:textSize="17sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="7.2dp"
            android:layout_height="16.7dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@mipmap/zx_44" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_marginTop="10dp"
        android:background="@color/color_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/color_white"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="公司介绍"
                android:textColor="#D0021B"
                android:textSize="17sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/ivCompanyProfile"
                android:layout_width="15dp"
                android:layout_height="13dp"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:src="@mipmap/zx_43" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/bg_color" />

        <ScrollView
            android:overScrollMode="never"
            android:layout_width="333.8dp"
            android:layout_height="261dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fadingEdge="none"
            android:paddingBottom="10dp"
            android:scrollbars="none">

            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="333.8dp"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:textColor="#FF999999"
                android:textSize="14sp" />
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout3"
        style="@style/settings_item_layout_style">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:text="其他功能"
            android:textColor="#FF333333"
            android:textSize="17sp" />

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="7.2dp"
            android:layout_height="16.7dp"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@mipmap/zx_44" />
    </LinearLayout>
</LinearLayout>