<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <include layout="@layout/top_bar_style" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal">


                <com.joooonho.SelectableRoundedImageView
                    android:id="@+id/head"
                    android:layout_width="66dp"
                    android:layout_height="66dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="14dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="14dp"
                    android:src="@mipmap/zx_113"
                    app:sriv_left_bottom_corner_radius="33dp"
                    app:sriv_left_top_corner_radius="33dp"
                    app:sriv_right_bottom_corner_radius="33dp"
                    app:sriv_right_top_corner_radius="33dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="11dp"
                        android:text="凌小慧"
                        android:textColor="#FF333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/info01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_marginTop="5dp"
                        android:text="男I26岁I175cmI63kg"
                        android:textColor="#FF666666"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/info02"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="18842682580"
                            android:textColor="#FF666666"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/info03"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="12dp"
                            android:singleLine="true"
                            android:text="户籍：重庆   所在地：杭州"
                            android:textColor="#FF666666"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/info04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="未婚 团员 1年以上工作经验"
                        android:textColor="#FF666666"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="11.1dp"
                    android:layout_height="11.1dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7.1dp"
                    android:src="@mipmap/zx_116" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4.8dp"
                    android:text="求职意向"
                    android:textColor="#FF333333"
                    android:textSize="10sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/hopepostion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="12dp"
                    android:text="UI设计师"
                    android:textColor="#FF333333"
                    android:textSize="12sp" />

                <View
                    android:layout_width="337dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:background="#EFEFEF" />

                <TextView
                    android:id="@+id/info05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="9dp"
                    android:text="全职I永嘉市I面议I提供住宿 "
                    android:textColor="#FF666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/info06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="9dp"
                    android:text="可立即上岗"
                    android:textColor="#FF666666"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="9.3dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7.1dp"
                    android:src="@mipmap/zx_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4.8dp"
                    android:text="工作经历"
                    android:textColor="#FF333333"
                    android:textSize="10sp" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingTop="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="9.3dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7.1dp"
                    android:src="@mipmap/zx_23" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4.8dp"
                    android:text="教育经历"
                    android:textColor="#FF333333"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="11dp"
                android:paddingRight="11dp">

                <TextView
                    android:id="@+id/education01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="杭州师范大学"
                    android:textColor="#FF333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/education02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="本科"
                    android:textColor="#FF666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/education03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="2011.09-2015.06"
                    android:textColor="#FF666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/educationhistory"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="zzzz"
                    android:textColor="#FF666666"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7.1dp"
                    android:src="@mipmap/zx_22" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4.8dp"
                    android:text="技能特长"
                    android:textColor="#FF333333"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="11dp"
                android:paddingRight="11dp">

                <TextView
                    android:id="@+id/specialty01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="第一外语 英语 一般"
                    android:textColor="#FF333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/specialty02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="计算机水平一般"
                    android:textColor="#FF333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/specialty03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="相关证书：无"
                    android:textColor="#FF666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/specialty04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="其他能力：无"
                    android:textColor="#FF666666"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="7.1dp"
                    android:src="@mipmap/zx_21" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="4.8dp"
                    android:text="联系方式"
                    android:textColor="#FF333333"
                    android:textSize="10sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutContact01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/contact01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="18842682580"
                    android:textColor="#FF333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/contact02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:text="QQ:356335205"
                    android:textColor="#FF666666"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/contact03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:text="杭州市余杭区赛银国际广场8号楼802"
                    android:textColor="#FF666666"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:id="@+id/layoutContact02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingLeft="11dp"
                android:paddingRight="11dp">

                <Button
                    android:id="@+id/btGet"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bt_bg_red_clickable"
                    android:gravity="center"
                    android:text="联系方式"
                    android:textColor="@color/color_white"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutBottomMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btBottomMenu01"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_bg_red_clickable"
                    android:gravity="center"
                    android:text="邀请面试"
                    android:textColor="@color/color_white"
                    android:textSize="14sp" />

                <Button

                    android:id="@+id/btBottomMenu02"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_bg_red_clickable"
                    android:gravity="center"
                    android:text="发送留言"
                    android:textColor="@color/color_white"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btBottomMenu03"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:background="@drawable/bt_bg_red_clickable"
                    android:gravity="center"
                    android:text="加入收藏"
                    android:textColor="@color/color_white"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>