<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#101318"
    android:orientation="vertical">

    <include layout="@layout/top_bar_style" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:text="请输入您收到的验证码"
        android:textColor="@color/color_white"
        android:textSize="14sp" />

    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/et1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="用户名或邮箱"
            android:textCursorDrawable="@drawable/text_cursor_cyan"
            android:textSize="28sp"
            app:met_baseColor="#ffffff"
            app:met_floatingLabel="highlight"
            app:met_primaryColor="#FF7741"
            app:met_singleLineEllipsis="true"
            app:met_textColorHint="@color/textColorHint" />

        <Button
            android:textAllCaps="false"
            android:textSize="14sp"
            android:layout_marginRight="10dp"
            android:textColor="@color/color_white"
            android:text="59s"
            android:background="@drawable/bt_bg_03"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="28dp" />

    </RelativeLayout>


    <Button
        android:layout_width="140dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/bt_bg_03"
        android:text="确定"
        android:textColor="@color/color_white" />
</LinearLayout>