<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/set_height_1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/setting_bg_01"
        android:orientation="horizontal">

        <View
            android:layout_width="40dp"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="关于"
            android:textColor="@color/color_white"
            android:textSize="@dimen/settings_test_size_01" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/settings_item_3"
        android:layout_width="match_parent"
        android:layout_height="@dimen/set_height_2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/setting_bg_03"
        android:orientation="horizontal">

        <View
            android:layout_width="40dp"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="常见问题"
            android:textColor="@color/color_white"
            android:textSize="@dimen/settings_text_size_02" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="@dimen/setting_right_size_01"
            android:layout_height="@dimen/setting_right_size_02"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@mipmap/right" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/settings_item_4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/set_height_2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/setting_bg_03"
        android:orientation="horizontal">

        <View
            android:layout_width="40dp"
            android:layout_height="wrap_content" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="使用条款"
            android:textColor="@color/color_white"
            android:textSize="@dimen/settings_text_size_02" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="@dimen/setting_right_size_01"
            android:layout_height="@dimen/setting_right_size_02"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@mipmap/right" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/settings_item_5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/set_height_2"
        android:layout_marginBottom="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="1dp"
        android:background="@drawable/setting_bg_02"
        android:orientation="horizontal">

        <View
            android:layout_width="40dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="退出登录"
            android:textColor="@color/color_white"
            android:textSize="@dimen/settings_text_size_02" />

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="@dimen/setting_right_size_01"
            android:layout_height="@dimen/setting_right_size_02"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:src="@mipmap/right" />
    </LinearLayout>
</LinearLayout>